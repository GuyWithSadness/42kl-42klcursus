#include "ft_printf.h"

void	ft_ptr_format(properties *flag)
{
	if (flag->width == -1)
	{
		if (!flag->prefix)
			flag->width = 16;
		else
			flag->width = 14;
	}
	if (flag->preci > flag->width)
	{
		flag->width = flag->preci;
		flag->preci = -1;
	}
	else if (flag->preci != -1)
		flag->width -= flag->preci;
	flag->place_zero = 1;
}

int		ft_ptr_handler(properties* flag, va_list ptr)
{
	int		printed;
	char	*base;
	uintptr_t	ptraddr;

	printed = 0;
	ft_ptr_format(flag);
	ptraddr = (uintptr_t)va_arg(ptr, void *);
	printed += ft_count_ptraddr(ptraddr);
	if (flag->prefix)
		printed += ft_base16_putprefix(flag);
	if (flag->width != -1)
		printed += ft_width_handler(flag, 'd', printed);
	if (flag->type == 'p')
		base = "0123456789abcdef";
	ft_put_ptraddr(ptraddr, base);
	return (printed);
}


int	ft_count_ptraddr(uintptr_t ptraddr)
{
	int	printed;

	printed = 0;
	while (ptraddr >= 16 && ++printed)
		ptraddr /= 16;
	printed++;
	return (printed);
}

void	ft_put_ptraddr(uintptr_t n, char *base16)
{
	if (n >= 16)
		ft_put_ptraddr((n / 16), base16);
	ft_put_char(base16[n % 16]);
}
